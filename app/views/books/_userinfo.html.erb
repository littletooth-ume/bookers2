<h1>User info</h1>
<div class="profile-container">
  <h3 class="profile-name"><%= user.name %></h3>
  <h3 class="profile-name"><%= user.introduction %></h3>
  <h3 class="profile-image"><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></h3>
  <!--画像-->

  <p>
    <%= link_to edit_user_path(user) do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  </p>
</div>