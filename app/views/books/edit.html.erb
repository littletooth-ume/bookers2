<h1>Editing Book</h1>

<%= render partial: "error" %>

<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit "Update Book" %>
<% end %>

<div>
  <span><%= link_to "Show", book_path(@book) %></span>
  <span>|</span>
  <span><%= link_to "Back", books_path %></span>
</div>